alias ..='cd ..'
alias ll='ls -lh'
alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -i'
alias grep='grep --color=auto'
alias info='info --vi-keys'
alias lv="$PAGER"
if type vim > /dev/null 2>&1; then
  alias vi='vim'
else
  alias vim='vi'
fi
alias -g L="|& $PAGER"
alias -g G='| grep'
alias -g H='| head'
alias -g T='| tail'

